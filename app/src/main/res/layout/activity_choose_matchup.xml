<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.buinvent.buscoreapp.ChooseMatchupActivity">

    <TextView
        android:id="@+id/leagueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Choose Your Matchup"
        android:textAlignment="center"
        android:textSize="35sp" />

    <Button
        android:id="@+id/matchup_btn1"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Bears&#10;Packers"
        android:textAlignment="viewStart"
        android:textSize="24sp" />
    <Button
        android:id="@+id/matchup_btn2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Patriots&#10;Colts"
        android:textAlignment="viewStart"
        android:textSize="24sp" />
    <Button
        android:id="@+id/matchup_btn3"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Browns&#10;Steelers"
        android:textAlignment="viewStart"
        android:textSize="24sp" />
</LinearLayout>
